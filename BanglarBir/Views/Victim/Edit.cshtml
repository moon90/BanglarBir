@model BanglarBir.Models.Victim

@{
    ViewData["Title"] = "Edit Victim";
}
<style>
    .loginButton {
        color: #ffffff;
        background-color: #ff4d4d;
        border-color: #ff4d4d;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Victim</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Name Field -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Phone Field -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter Phone Number" readonly />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Status Field -->
                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        @foreach (var status in ViewBag.Statuses as List<SelectListItem>)
                        {
                            <option value="@status.Value">@status.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Location Field -->
                <div class="mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" placeholder="Enter Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <!-- bKash Number Field -->
                <div class="mb-3">
                    <label asp-for="bKashNumber" class="form-label"></label>
                    <input asp-for="bKashNumber" class="form-control" placeholder="Enter bKash Number" />
                    <span asp-validation-for="bKashNumber" class="text-danger"></span>
                </div>

                <!-- Donation Needed Field -->
                <div class="mb-3">
                    <label asp-for="DonationNeeded" class="form-label"></label>
                    <select asp-for="DonationNeeded" class="form-select">
                        @foreach (var option in ViewBag.DonationNeededOptions as List<SelectListItem>)
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                    <span asp-validation-for="DonationNeeded" class="text-danger"></span>
                </div>

                <!-- Is Student Field -->
                <div class="mb-3">
                    <label asp-for="IsStudent" class="form-label"></label>
                    <select asp-for="IsStudent" class="form-select">
                        @foreach (var option in ViewBag.IsStudentOptions as List<SelectListItem>)
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    </select>
                    <span asp-validation-for="IsStudent" class="text-danger"></span>
                </div>

                <!-- Picture Upload -->
                <div class="mb-3">
                    <label asp-for="Picture" class="form-label">Upload Picture</label>
                    <input type="file" asp-for="Picture" class="form-control" />
                    @* <span asp-validation-for="Picture" class="text-danger"></span> *@
                </div>

                <!-- Display Current Picture -->
                @if (!string.IsNullOrEmpty(Model.Picture))
                {
                    <div class="mb-3">
                        <label class="form-label">Current Picture:</label>
                        <div>
                            <img src="@Model.Picture" class="img-thumbnail" width="150" />
                        </div>
                    </div>
                }

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn loginButton">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Adding Bootstrap JS and Popper.js for functionality -->
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
