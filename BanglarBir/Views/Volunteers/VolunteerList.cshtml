@model IEnumerable<BanglarBir.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer List";
}

<h2>Volunteer List</h2>

<a href="/volunteers/create" class="btn btn-primary mt-3">Add New Volunteer</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>NID/Student ID</th>
                <th>Email/Phone</th>
                <th>Location</th>
                <th>Facebook Profile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int count = 1;
                foreach (var volunteer in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@volunteer.Name</td>
                        <td>@volunteer.NIdOrStudentId</td>
                        <td>@volunteer.EmailOrPhone</td>
                        <td>@volunteer.Location</td>
                        <td>
                            @if (!string.IsNullOrEmpty(volunteer.FbProfileUrl))
                            {
                                <a href="@volunteer.FbProfileUrl" target="_blank">Profile</a>
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td>
                            <a href="/volunteers/@volunteer.Id" class="btn btn-sm btn-info">Details</a>
                            <a href="/volunteers/edit/@volunteer.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/volunteers/delete/@volunteer.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this volunteer?');">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No volunteers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>


