@model BanglarBir.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer";
}

<h2>Delete Volunteer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Email or Phone</dt>
        <dd class="col-sm-10">@Model.EmailOrPhone</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">FB Profile URL</dt>
        <dd class="col-sm-10"><a href="@Model.FbProfileUrl" target="_blank">@Model.FbProfileUrl</a></dd>
        <dt class="col-sm-2">Student ID/NID Photo</dt>
        <dd class="col-sm-10">@Model.StudentIdOrNidPhoto</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
