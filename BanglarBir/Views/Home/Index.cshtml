<style>
    .search-bar-container {
        max-width: 50%;
        margin: auto;
    }

    .search-bar {
        border: 2px solid #ff4d4d; /* Red border */
        border-radius: 5px;
    }

        .search-bar:focus {
            border-color: #28a745; /* Green border on focus */
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); /* Green shadow */
        }

    .search-button {
        background-color: #28a745; /* Green button */
        color: #ffffff; /* White text */
        border: none;
        border-radius: 5px;
    }

        .search-button:hover {
            background-color: #218838; /* Darker green on hover */
        }

        .search-button:focus {
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); /* Green shadow */
        }

    .search-hint {
        color: #ff4d4d; /* Red hint text */
        font-style: italic;
    }

/*     .pagination {
        justify-content: center;
    } */

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .container {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    .scrollable-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        overflow-y: auto;
        /* height: 80vh; */
    }

    .card {
/*         flex: 1 1 calc(25% - 20px);
        max-width: calc(25% - 20px);
        background-color: white; */
        border: 1px solid #ff4d4d;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.25em;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 5px;
    }

        .card-text strong {
            color: #28a745; /* Green color */
        }

    .bg-gradient-red-green {
        background: linear-gradient(45deg, red, green);
        color: white;
    }

    .video-container {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    /* Responsive card layout */
    .card-custom {
        margin-bottom: 20px;
    }

    #card-container {
        display: flex;
        flex-wrap: wrap;
    }

    .card {
        flex: 1 1 calc(25% - 20px); /* Four columns with 20px margin */
        margin: 10px;
        box-sizing: border-box;
    }

    @@media (max-width: 1200px) {
        .card {
            flex: 1 1 calc(33.333% - 20px); /* Three columns */
        }
    }

    @@media (max-width: 768px) {
        .card {
            flex: 1 1 calc(50% - 20px); /* Two columns */
        }
    }

    @@media (max-width: 576px) {
        .card {
            flex: 1 1 100%; /* One column */
        }
    }

    /* Pagination container styles */
    .pagination-container {
        text-align: center;
        margin-top: 20px;
    }

    .pagination-container button {
        margin: 5px;
    }

        .search-bar-container {
        max-width: 100%;
        margin: auto;
        padding: 0 15px;
    }

    .input-group {
        flex-wrap: wrap;
    }

    .form-control, .form-select, .btn {
        margin-bottom: 10px;
    }

    .search-bar {
        flex: 1;
        min-width: 200px;
    }

    .form-select {
        flex: 0 0 100px;
    }

    .search-button {
        background-color: #ff4d4d;
        color: white;
    }

    .search-hint {
        color: #6c757d;
    }

    @@media (min-width: 576px) {
        .input-group {
            flex-wrap: nowrap;
        }

        .search-bar {
            margin-right: 10px;
        }
    }

</style>

