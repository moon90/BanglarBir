<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banglar Bir</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .navbar-custom {
            background-color: #ff4d4d; /* Red */
        }

        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #ffffff; /* White */
        }

        .navbar-custom .nav-link:hover {
            color: #e6e6e6; /* Lighter white on hover */
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff;
        }

        .navbar-dark .navbar-nav .nav-link:focus, .navbar-dark .navbar-nav .nav-link:hover
        {
            color: #ffffff;
            background-color: #ff4d4d;
        }

        .btn-login {
            background-color: #ff4d4d; /* Red */
            color: #ffffff; /* White */
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            text-decoration: none;
            font-size: 1.25rem;
        }

    .btn-login:hover {
        background-color: #ffffff; /* White */
        color: #ff4d4d; /* Red */
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        text-decoration: none;
        font-size: 1.25rem;
    }

    .nav-link {
        padding: 8px 12px; /* Adjust padding for better focus */
        border-radius: 5px;
        }

    .nav-link:hover {
        background-color: #e6e6e6; /* Light grey background on hover for contrast */
        color: #ff4d4d; /* Red text on hover */
    }

    .footer {
        background-color: #ff4d4d; /* Light grey background */
        text-align: center;
        position:relative;
        bottom: 0;
        color:#ffffff;
    }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Banglar Bir</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="btn-login" href="/volunteers">Volunteer</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-login" href="/victims/victimsbyuser">Victim</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-login" href="@Url.Action("Logout", "Home")">Sign Out</a>
                        </li>
                        <!-- User Profile Dropdown -->
                        @* <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle btn-login" href="#" id="userProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                                <li><a class="dropdown-item" href="/volunteers">Volunteer</a></li>
                                <li><a class="dropdown-item" href="/victims">Victim</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Home")">Sign Out</a></li>
                            </ul>
                        </li> *@
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn-login" href="@Url.Action("Login", "Home")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-login" href="@Url.Action("SignUp", "Home")">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-login" href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>
                        
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="footer m-5">
        <div class="container">
            <p>Powered by MoonMVP. All rights reserved.</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
